#!/usr/bin/env python

import sys
import time

def factorize(n):
    """
    Factorize a number into a product of two smaller numbers.

    Args:
    - n (int): The number to be factorized.

    Returns:
    - list: List of tuples representing pairs of factors.
    """
    factors = []
    for i in range(2, n // 2 + 1):
        if n % i == 0:
            factors.append((i, n // i))
    return factors

def main():
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)

    input_file = sys.argv[1]

    try:
        with open(input_file, 'r') as file:
            for line in file:
                n = int(line.strip())
                factorizations = factorize(n)
                for p, q in factorizations:
                    print(f"{n}={p}*{q}")

    except FileNotFoundError:
        print(f"Error: File '{input_file}' not found.")
        sys.exit(1)

if __name__ == "__main__":
    start_time = time.time()
    main()
    end_time = time.time()
    elapsed_time = end_time - start_time
    print(f"\nElapsed Time: {elapsed_time:.3f} seconds")
